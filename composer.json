{
    "name": "elife/logging-sdk",
    "description": "eLife Sciences logging SDK",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "eLife\\Logging\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\eLife\\Logging\\": "./test"
        }
    },
    "require": {
        "php": "^7.1 || ^8.0",
        "monolog/monolog": "^1.22 || ^2.0 || ^3.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "crell/api-problem": "^2.0 || ^3.0",
        "elife/api-problem": "^1.0",
        "mikey179/vfsstream": "^1.6.11",
        "phpunit/phpunit": "^7.5 || ^9.6 || ^11.0",
        "pimple/pimple": "^3.0",
        "silexandfriends/silex": "^2.2 || ^3.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/browser-kit": "^4.4 || ^5.0",
        "symfony/debug": "^4.4 || ^5.0",
        "symfony/http-foundation": "^4.4 || ^5.0",
        "symfony/http-kernel": "^4.4 || ^5.0"
    },
    "suggest": {
        "silex/silex": "^2.0, to use LoggerProvider",
        "crell/api-problem": "^2.0 || ^3.0, to use LoggerProvider",
        "elife/api-problem": "^1.0, to use LoggerProvider",
        "symfony/http-kernel": "to use LoggerProvider"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
