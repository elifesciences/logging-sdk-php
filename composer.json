{
    "name": "elife/logging-sdk",
    "description": "eLife Sciences logging SDK",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "eLife\\Logging\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "test\\eLife\\Logging\\": "./test"
        }
    },
    "require": {
        "php": "^7.0",
        "monolog/monolog": "^1.22",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "elife/api-problem": "^1.0",
        "phpunit/phpunit": "^5.7 || ^6.0",
        "pimple/pimple": "^3.0",
        "silex/silex": "^2.0"
    },
    "suggest": {
        "ext/newrelic": "Enables the Monitoring class",
        "silex/silex": "^2.0, to use LoggerProvider"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
